<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sms.controller.student.StudentPersonalInfoController"
      spacing="20" style="-fx-padding: 20;">
    <Label text="个人信息" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="15">
        <columnConstraints>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="200"/>
        </columnConstraints>

        <Label text="学号:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="studentIdLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="姓名:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="nameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="性别:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="genderLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="班级:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label fx:id="classNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="电话:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label fx:id="phoneLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="邮箱:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    </GridPane>

    <Button text="修改信息" onAction="#handleEditInfo" style="-fx-pref-width: 100;"/>
</VBox>