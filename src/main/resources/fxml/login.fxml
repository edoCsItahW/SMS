<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sms.controller.LoginController"
      alignment="CENTER" spacing="20" style="-fx-padding: 40;">

    <Label text="学生管理系统" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-radius: 5;">
        <Label fx:id="titleLabel" text="登录" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

        <!-- 身份选择 -->
        <VBox spacing="5">
            <Label text="身份选择" style="-fx-font-weight: bold;"/>
            <HBox spacing="20">
                <RadioButton fx:id="studentRadio" text="学生" selected="true"/>
                <RadioButton fx:id="teacherRadio" text="教师"/>
            </HBox>
        </VBox>

        <TextField fx:id="usernameField" promptText="用户名" style="-fx-pref-width: 250;"/>
        <PasswordField fx:id="passwordField" promptText="密码" style="-fx-pref-width: 250;"/>
        <PasswordField fx:id="confirmPasswordField" promptText="确认密码" style="-fx-pref-width: 250;" visible="false"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="actionButton" text="登录" onAction="#handleLogin" style="-fx-pref-width: 100;"/>
            <Label fx:id="switchLabel" text="没有账号？立即注册" style="-fx-text-fill: blue; -fx-cursor: hand;"/>
        </HBox>

        <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
    </VBox>
</VBox>