<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sms.controller.teacher.TeacherVacationManagementController"
      spacing="20" style="-fx-padding: 20;">
    <Label text="请假信息管理" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="状态:"/>
        <ComboBox fx:id="statusComboBox" prefWidth="150"/>
        <Label text="班级:"/>
        <ComboBox fx:id="classComboBox" prefWidth="150"/>
        <Label text="课程:"/>
        <ComboBox fx:id="courseComboBox" prefWidth="150"/>
        <Label text="姓名:"/>
        <TextField fx:id="nameField" prefWidth="150"/>
        <Button text="查询" onAction="#handleQuery"/>
    </HBox>

    <TableView fx:id="vacationTable" prefHeight="400">
        <columns>
            <!-- 列会在控制器中动态添加 -->
        </columns>
    </TableView>
</VBox>