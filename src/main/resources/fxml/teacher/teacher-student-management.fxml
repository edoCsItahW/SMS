<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sms.controller.teacher.TeacherStudentManagementController"
      spacing="20" style="-fx-padding: 20;">
    <Label text="学生信息管理" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="班级:"/>
        <ComboBox fx:id="classComboBox" prefWidth="150"/>
        <Label text="课程:"/>
        <ComboBox fx:id="courseComboBox" prefWidth="150"/> <!-- 确保这里 fx:id 正确 -->
        <Label text="姓名:"/>
        <TextField fx:id="nameField" prefWidth="150"/>
        <Button text="查询" onAction="#handleQuery"/>
        <Button text="重置" onAction="#handleReset"/>
        <Button text="导出" onAction="#handleExport"/>
    </HBox>

    <TableView fx:id="studentTable" prefHeight="400">
        <columns>
            <TableColumn text="学号" prefWidth="100"/>
            <TableColumn text="姓名" prefWidth="100"/>
            <TableColumn text="性别" prefWidth="80"/>
            <TableColumn text="班级" prefWidth="150"/>
            <TableColumn text="电话" prefWidth="150"/>
            <TableColumn text="邮箱" prefWidth="200"/>
            <TableColumn text="操作" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>